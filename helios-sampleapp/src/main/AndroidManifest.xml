<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.worldline.helios.sampleapp">

    <application
        android:name=".ui.app.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.worldline.helios.sampleapp.ui.view.activity.HomeActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.view.activity.RecordActivity" />
        <activity android:name=".ui.view.activity.AuthActivity" />

    </application>

</manifest>